// ------------------------------------------------------------------------------------------ Fonts
@import url('https://fonts.googleapis.com/css?family=Graduate')
@import url('https://fonts.googleapis.com/css?family=Indie+Flower')
@import url('https://fonts.googleapis.com/css?family=Nova+Flat')

@font-face // For Japanese text
	font-family AiharaHudemojiKaisho
	src url("/fonts/AiharaHudemojiKaisho2.01.ttf")

// ------------------------------------------------------------------------------------------ Colours
c-white-trans       = rgba(255, 255, 255,  .5)
c-white-dark        = rgba(192, 192, 192, 1.0)
c-grey-dark         = rgba( 64,  64,  64, 1.0)
c-red               = rgba(255, 128, 128, 1.0)
c-red-dark-trans    = rgba(128,  64,  64,  .5)
c-green             = rgba(128, 255, 128, 1.0)
c-green-dark-trans  = rgba( 64, 128,  64,  .5)
c-blue              = rgba(128, 192, 255, 1.0)
c-blue-trans        = rgba(128, 192, 255,  .5)
c-blue-transh       = rgba(128, 192, 255,  .2)
c-blue-dark2-transl = rgba( 16,  32,  64,  .8)
c-blue-dark2-transh = rgba( 16,  32,  64,  .2)
c-greenblue-transl  = rgba(128, 255, 255,  .8)
c-greenblue-trans   = rgba(128, 255, 255,  .5)
c-greenblue-transh  = rgba(128, 255, 255,  .2)
c-purple            = rgba(192, 128, 255, 1.0)
c-purple-transl     = rgba(192, 128, 255,  .8)
c-purple-transh     = rgba(192, 128, 255,  .2)
c-gold              = rgba(255, 192, 128, 1.0)
c-transparent       = rgba(  0,   0,   0,  .0)

// ======================================================================================================================== Body/BG
body
	overflow-x hidden
	background black

div.background
	position fixed
	top 0
	left 0
	width 100%
	height 100%
	z-index -2

	background url('/images/background.png') repeat // Wallpaper is from http://www.dinpattern.com/
	filter blur(3px)

	animation 180s bg-scroll-anim infinite linear

@keyframes bg-scroll-anim
	100%
		background-position -3000px 0

div.bg-image
	position fixed
	top 0
	left 0
	width 50%
	height 100%
	z-index -1

	background url('/images/wada.webp') repeat
	background-size 100%
	filter opacity(50%)

	animation 1s bg-image-bounce-anim infinite alternate ease-in-out

@keyframes bg-image-bounce-anim
	100%
		background-position 0 -3px

div.sprite
	position absolute
	top -23px
	right 300px
	width 104px
	height 144px
	z-index -1

	background url('/images/wada_sprite.png')
	filter opacity(50%)

	image-rendering pixelated

// ======================================================================================================================== Site Logo
h1.logo
	margin 0
	padding-left 15px
	width 200px

	font 80px Graduate

	transition text-shadow 3s
	text-shadow -2px 2px 0px rgba(0,230,230,.5), // Credit: https://designshack.net/articles/css/12-fun-css-text-shadows-you-can-copy-and-paste/
	            -4px 4px 0px rgba(1,204,204,.5),
	            -6px 6px 0px rgba(0,189,189,.5)

	cursor pointer

h1.logo:hover
	transition text-shadow .5s
	text-shadow -4px  2px 0px  rgba(0,230,230,.5),
	            -8px  4px 0px  rgba(1,204,204,.5),
	            -12px 6px 0px  rgba(0,189,189,.5),
	            -2px  2px 20px rgb(0,230,230),
	            -4px  4px 40px rgb(1,204,204),
	            -6px  6px 60px rgb(0,189,189)

h1.logo a
	text-decoration none
	color white

	-webkit-text-fill-color c-white-trans
	-webkit-text-stroke-width 2px
	-webkit-text-stroke-color white

// ======================================================================================================================== Headings
h2, h3, h4
	margin 0

	font 35px 'Nova Flat'
	color white

h3
	font-size 25px

h3.section-heading
	position relative
	top 14px
	left 20px

h4
	font-size 20px

h5
	margin 5px
	margin-left 20px

	font 14px "Trebuchet MS"
	color white

.fancy
	font-family 'Indie Flower', AiharaHudemojiKaisho

// ======================================================================================================================== Text
p, pre
	margin 0

	font 11px Verdana
	color white

p.message
	padding 5px
	background c-green-dark-trans

	font-weight bold
	color c-green

p.error
	padding 5px
	background c-red-dark-trans

	font-weight bold
	color c-red

p.info b
	margin-left 5px

p.info b:before
	color c-purple
	content '* '

pre
	white-space pre-wrap
	word-wrap break-all

pre.error
	padding 5px
	background c-red-dark-trans

	font-family Consolas, 'Courier New';
	color c-red

span.icon-sortable
	font-size 14px
	color c-blue

span.icon-edit
	font-size 18px
	color c-purple

label
	font 10px Verdana
	color white

.stylized
	font 12px Graduate

.subdued
	color c-white-trans

a
	text-decoration none
	color c-blue

a:hover
	text-decoration underline

a.menu-item
	margin-right 15px

.purple
	color c-purple

.gold
	color c-gold

a.gold:hover
	text-decoration none
	border-bottom 1px c-gold solid

// ======================================================================================================================== Divs
div.main
	margin-top 10px
	margin-bottom 8px
	padding 5px
	box-sizing border-box

	background linear-gradient(90deg, c-blue-dark2-transl, c-blue-dark2-transh)
	border 1px c-blue-transh solid

	box-shadow 0 20px 25px 5px rgba(0,0,0,.2)
	box-shadow 0 10px 25px 5px rgba(0,0,0,.4)

div.menu-bar
	position absolute
	top 100px
	left 300px

div.menu-bar-right
	position absolute
	top 100px
	right 10px

div.banner
	position absolute
	top 0
	left 0
	width 100%
	height 20px

	overflow hidden
	background linear-gradient(90deg, c-transparent, rgba(0,0,0,.5))

div.banner p
	margin-top 3px
	animation marquee 60s linear infinite

@keyframes marquee
	0%
		transform translateX(100%)
	100%
		transform translateX(-100%)

div.banner p:hover
	animation-play-state paused

div.footer
	position fixed
	bottom 0
	left 0
	width 100%
	height 30px

	text-align center

div.footer:after
	position absolute
	bottom 3px
	left 3px
	padding 5px

	background black

	font 11px Verdana
	color c-white-dark

	content 'site info'

div.footer:hover
	background rgba(0,0,0,.8)

div.footer p
	margin-top 7px
	filter opacity(0%)

div.footer:hover p
	filter opacity(100%)

div.edit-page-link
	padding 0 5px 5px 5px

	position fixed
	top 0
	right 0

	background rgba(0,0,0,.8)

div.centered
	margin 10px
	margin-left 20%
	margin-right 20%

div.darkened
	padding 10px
	background rgba(0,0,0,.3)

div.hide-overflow
	display block
	width 150px

	overflow hidden
	white-space nowrap

// ======================================================================================================================== Tables
table
	width 100%
	border-spacing 0

table.centered
	margin 0 auto
	max-width 1500px

table.small
	max-width 500px

tr.heading td p
	font-style italic
	color c-white-dark

tr.heading td p a
	color c-greenblue-transl

tr.list td
	padding 1px
	padding-left 5px
	
	height 21px // A height of 21px centers 11px Verdana text better
	vertical-align middle

tr.list:nth-child(even)
	background rgba(128,192,255,.05)

tr.list td a
	color white

tr.list td a:hover
	border-bottom 1px c-white-trans solid
	text-decoration none

tr.list td a.normal
	color c-blue

tr.list td a.normal:hover
	border none
	text-decoration underline

tr.list td a.icon-edit
	position relative
	bottom 1px

	font-size 15px
	color c-purple

tr.list td a.icon-edit:hover
	border none
	color c-gold

td
	padding 5px
	vertical-align top

td.label p
	padding-right 10px
	text-align right
	color c-white-dark

// ======================================================================================================================== Forms
input[type='text'], input[type='password'], input[type='number'], textarea, select
	padding 3px
	width 100%

	background rgba(0,0,0,.2)
	border none
	border-bottom 1px c-transparent solid

	font 11px Verdana
	color white

input[type='number']
	width 40px
	color c-gold

textarea
	max-width 480px
	min-height 80px

	background rgba(0,0,0,.2)
	border-bottom 1px c-transparent solid

select
	margin-top 5px
	width 100px

option
	background black

input[type='text']:hover, input[type='password']:hover, input[type='number']:hover, textarea:hover
	border-bottom 1px c-purple-transl solid

input[type='checkbox']
	position relative
	top 2px

	margin 0
	margin-right 2px
	padding 0

input[type='submit']
	width 100px
	height 30px

	background rgba(0,0,0,.3)
	border 1px c-grey-dark solid

	font 11px Verdana
	color white

	cursor pointer

input[type='submit']:hover
	background c-purple-transh
	border 1px c-purple-transl solid

	box-shadow 0 0 50px 5px c-purple-transh

input[type='submit']:disabled
	color c-white-trans

input[type='submit']:disabled:hover
	background rgba(0,0,0,.3)
	border 1px c-grey-dark solid

	box-shadow none
	cursor default

input[type='submit'].small
	width 50px
	height 25px

// ======================================================================================================================== Other
img.ss
	margin-bottom -4px

img.preview
	margin-top 5px
	filter opacity(50%)

img.preview:hover
	filter opacity(100%)

hr
	border none
	border-top 1px c-greenblue-transh dashed

hr.bright
	border-top 1px c-greenblue-trans dashed

hr.tight
	margin-top -2px

::-webkit-scrollbar
	width 15px

::-webkit-scrollbar-track
	background black
	border-left 1px c-blue-trans dotted

::-webkit-scrollbar-thumb
	background c-blue-transh

::-webkit-scrollbar-thumb:hover
	background c-greenblue-transh
