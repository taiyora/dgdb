@import url('https://fonts.googleapis.com/css?family=Graduate')

body
	background url('/images/background.png') repeat

h1.logo
	margin 0
	padding-left 15px

	font 80px Graduate
	color white

	transition 3s
	text-shadow -2px 2px 0px #00e6e6, // Credit: https://designshack.net/articles/css/12-fun-css-text-shadows-you-can-copy-and-paste/
	            -4px 4px 0px #01cccc,
	            -6px 6px 0px #00bdbd

	cursor pointer

h1.logo:hover
	transition .5s
	text-shadow -4px  2px 0px  #00e6e6,
	            -8px  4px 0px  #01cccc,
	            -12px 6px 0px  #00bdbd,
	            -2px  2px 20px #00e6e6,
	            -4px  4px 40px #01cccc,
	            -6px  6px 60px #00bdbd

h1.logo a
	text-decoration none
	color white

p
	margin 0

	font 11px Verdana
	color white

p.stylized
	font 12px Graduate

p.heading
	font-style italic
	color rgb(192,192,192)

p.error
	padding 5px
	background rgba(128,64,64,.5)

	font-weight bold
	color rgb(255,128,128)

span.subdued
	color rgb(128,128,128)

label
	font 10px Verdana
	color white

a
	text-decoration none
	color rgb(192,128,255)

a:hover
	text-decoration underline

a.menu-item
	margin-right 20px

a.menu-item.blue
	color rgb(128,192,255)

div.main
	margin-top 10px

	background rgba(64,64,64,.8)
	border 1px rgb(128,128,128) solid

div.menu-bar
	position absolute
	top 100px
	left 300px

table
	width 100%
	padding 5px

table.centered
	margin 0 auto
	max-width 1500px

td
	padding 5px
	vertical-align top

td.list
	padding 0
	padding-left 10px
	
	height 21px // A height of 21px centers 11px Verdana text better
	vertical-align middle

	background rgba(32,32,32,.5)

input[type='text']
	padding 3px
	width 100%

	background rgba(0,0,0,.5)
	border none

	font 12px Verdana
	color white

input[type='text']:hover
	background rgb(0,0,0)

input[type='checkbox']
	position relative
	top 2px

	margin 0
	margin-right 2px
	padding 0

input[type='submit']
	font 12px Verdana
