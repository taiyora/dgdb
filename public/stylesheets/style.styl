@import url('https://fonts.googleapis.com/css?family=Graduate')

body
	background url('/images/background.png') repeat

h1
	margin 0
	padding-left 15px

	font 80px Graduate
	color white
	text-shadow -2px 2px 0px #00e6e6, // Credit: https://designshack.net/articles/css/12-fun-css-text-shadows-you-can-copy-and-paste/
	            -4px 4px 0px #01cccc,
	            -6px 6px 0px #00bdbd

p
	font 12px Verdana
	color white

p.stylized
	margin 0
	font-family Graduate

p.error
	padding 5px
	background rgba(128,64,64,.5)

	font-weight bold
	color rgb(255,128,128)

label
	font 10px Verdana
	color white

a
	text-decoration none
	color rgb(192,128,255)

a:hover
	text-decoration underline

a.menu-item
	margin-right 20px

div.main
	margin-top 10px

	background rgba(64,64,64,.8)
	border 1px rgb(128,128,128) solid

div.menu-bar
	position absolute
	top 100px
	left 300px

table
	margin 0 auto // 'auto' centers the table
	max-width 1500px

td
	padding 5px
	vertical-align top

input[type='text']
	padding 3px
	width 100%

	background rgba(0,0,0,.5)
	border none

	font 12px Verdana
	color white

input[type='checkbox']
	position relative
	top 2px

	margin 0
	margin-right 2px
	padding 0
