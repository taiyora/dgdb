@import url('https://fonts.googleapis.com/css?family=Graduate')
@import url('https://fonts.googleapis.com/css?family=Indie+Flower')
@import url('https://fonts.googleapis.com/css?family=Nova+Flat')

@font-face // For Japanese text
	font-family AiharaHudemojiKaisho
	src url("/fonts/AiharaHudemojiKaisho2.01.ttf")

body
	overflow-x hidden
	background black

div.background
	position fixed
	top 0
	left 0
	width 100%
	height 100%
	z-index -1

	background url('/images/background.png') repeat // Wallpaper is from http://www.dinpattern.com/
	filter blur(3px)

	animation 180s bg-scroll-anim infinite linear

@keyframes bg-scroll-anim
	100%
		background-position -3000px 0

h1.logo
	margin 0
	padding-left 15px
	width 200px

	font 80px Graduate
	color white

	transition text-shadow 3s
	text-shadow -2px 2px 0px rgba(0,230,230,.5), // Credit: https://designshack.net/articles/css/12-fun-css-text-shadows-you-can-copy-and-paste/
	            -4px 4px 0px rgba(1,204,204,.5),
	            -6px 6px 0px rgba(0,189,189,.5)

	cursor pointer

h1.logo:hover
	transition text-shadow .5s
	text-shadow -4px  2px 0px  rgba(0,230,230,.5),
	            -8px  4px 0px  rgba(1,204,204,.5),
	            -12px 6px 0px  rgba(0,189,189,.5),
	            -2px  2px 20px rgb(0,230,230),
	            -4px  4px 40px rgb(1,204,204),
	            -6px  6px 60px rgb(0,189,189)

h1.logo a
	text-decoration none
	color white

	-webkit-text-fill-color rgba(255,255,255,.5)
	-webkit-text-stroke-width 2px
	-webkit-text-stroke-color white

h2, h3
	margin 0

	font 35px 'Nova Flat'
	color white

h3
	font-size 25px

h3.heading
	position relative
	top 14px
	left 20px

.fancy
	font-family 'Indie Flower', AiharaHudemojiKaisho

p, pre
	margin 0

	font 11px Verdana
	color white

p.message
	padding 5px
	background rgba(64,128,64,.5)

	font-weight bold
	color rgb(128,255,128)

p.error
	padding 5px
	background rgba(128,64,64,.5)

	font-weight bold
	color rgb(255,128,128)

pre
	white-space pre-wrap
	word-wrap break-all

pre.error
	padding 5px
	background rgba(128,64,64,.5)

	font-family Consolas, 'Courier New';
	color rgb(255,128,128)

span.icon-sortable
	font-size 14px
	color rgb(128,192,255)

span.icon-edit
	font-size 18px
	color rgb(192,128,255)

.stylized
	font 12px Graduate

.subdued
	color rgb(128,128,128)

label
	font 10px Verdana
	color white

a
	text-decoration none
	color rgb(128,192,255)

a:hover
	text-decoration underline

a.menu-item
	margin-right 15px

.purple
	color rgb(192,128,255)

.gold
	color rgb(255,192,128)

a.gold:hover
	text-decoration none
	border-bottom 1px rgb(255,192,128) solid

div.main
	margin-top 10px
	margin-bottom 8px
	padding 5px
	box-sizing border-box

	background rgba(128,128,128,.2)
	border 1px rgba(128,128,128,.8) outset

	box-shadow 0 20px 25px 5px rgba(0,0,0,.2)
	box-shadow 0 10px 25px 5px rgba(0,0,0,.4)

div.menu-bar
	position absolute
	top 100px
	left 300px

div.menu-bar-right
	position absolute
	top 100px
	right 10px

div.darkened
	padding 10px
	background rgba(0,0,0,.3)

div.hide-overflow
	display block
	width 100px

	overflow hidden
	white-space nowrap

div.edit-page-link
	padding 0 5px 5px 5px

	position fixed
	top 0
	right 0

	background rgba(0,0,0,.8)

table
	width 100%

table.centered
	margin 0 auto
	max-width 1500px

table.small
	max-width 500px

tr.heading td p
	font-style italic
	color rgb(192,192,192)

tr.heading td p a
	color rgb(192,192,192)

tr.list td
	padding 0
	padding-left 7px
	
	height 21px // A height of 21px centers 11px Verdana text better
	vertical-align middle

	background rgba(64,64,64,.3)

tr.list:nth-child(even) td
	background rgba(92,92,92,.3)

tr.list td.label
	padding-right 5px
	background none
	text-align right

tr.list td a
	color white

tr.list td a:hover
	border-bottom 1px rgb(128,128,128) dotted
	text-decoration none

tr.list td a.normal
	color rgb(128,192,255)

tr.list td a.normal:hover
	text-decoration underline
	border none

td
	padding 5px
	vertical-align top

td.label p
	color rgb(192,192,192)

input[type='text'], input[type='password'], input[type='number'], textarea, select
	padding 3px
	width 100%

	background rgba(0,0,0,.1)
	border none
	border-bottom 1px rgba(64,64,64,.8) solid

	font 11px Verdana
	color white

input[type='number']
	width 40px
	color rgb(255,192,128)

textarea
	max-width 480px
	min-height 80px

	background rgba(0,0,0,.3)
	border-bottom 1px rgba(0,0,0,0) solid

select
	margin-top 5px
	width 100px

option
	background black

input[type='text']:hover, input[type='password']:hover, input[type='number']:hover, textarea:hover
	border-bottom 1px rgba(192,128,255,.8) solid

input[type='checkbox']
	position relative
	top 2px

	margin 0
	margin-right 2px
	padding 0

input[type='submit']
	width 100px
	height 30px

	background rgba(0,0,0,.3)
	border 1px rgb(64,64,64) solid

	font 11px Verdana
	color white

	cursor pointer

input[type='submit']:hover
	background rgba(192,128,255,.1)
	border 1px rgba(192,128,255,.8) solid

	box-shadow 0 0 50px 5px rgba(192,128,255,.1)

input[type='submit']:disabled
	color rgb(128,128,128)

input[type='submit']:disabled:hover
	background rgba(0,0,0,.3)
	border 1px rgb(64,64,64) solid

	box-shadow none
	cursor default

input[type='submit'].small
	width 50px
	height 25px

hr
	border none
	border-top 1px rgb(128,128,128) dashed

::-webkit-scrollbar
	width 15px

::-webkit-scrollbar-track
	background black
	border-left 1px rgba(128,192,255,.5) dotted

::-webkit-scrollbar-thumb
	background rgba(128,192,255,.1)

::-webkit-scrollbar-thumb:hover
	background rgba(128,192,255,.2)
