extends layout

block content
	script.
		$(document).ready(function() {
			// Convert absolute timestamps to "... ago" format
			$('.timestamp').each(function(i, obj) {
				this.innerHTML = moment(this.innerHTML).fromNow();
			});
		});

	if error
		p.error(align='center')= error

	p <a href='/game/revisions'>Game revisions only â†’</a>
	
	if revisions.length
		table
			tr.heading
				td(width='25%')
				td(width='5%')
					p ID
				td(width='150px')
					p Relation
				td(width='10%')
					p User
				td
					p Message

			each revision in revisions
				tr.list
					td.label
						p
							| <span class='timestamp' style='color: rgba(128,255,255,.8);'>!{revision.time_stamp}</span>
							| @!{revision.time_stamp}

					td
						if revision.type == 'g'
							p g!{revision.id}
						else
							p r!{revision.id}

					td
						div.hide-overflow
							if revision.type == 'g'
								p <a class='normal' href='/game/view/!{revision.relation_id}'>!{revision.title}</a>
							else
								p(style='color: rgb(128,255,128);')= revision.title

					td
						p= revision.username
					td
						p= revision.message
